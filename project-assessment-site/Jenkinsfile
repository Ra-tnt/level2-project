pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    service_name: main-site
    service_type: REST
spec:
  containers:
  - name: pmss
    image: docker:latest
    command: 
    - cat
    tty: true
    volumeMounts:
    - mountPath: /var/run/docker.sock
      name: docker-sock
  - name: kubectl
    image: bryandollery/terraform-packer-aws-alpine
    command:
    - cat
    tty: true
  volumes:
  - name: docker-sock
    hostPath:
      path: /var/run/docker.sock  
      type: Socket
"""
    }
  }  
environment {
    CREDS = credentials('raghadq-docker-cred')
    DOCKER_NAMESPACE = 'raghadq'
    SERVICE_NAME = 'main-site'
    TOKEN=credentials('fbfe41a6-4f4c-4db5-8f6a-ca2d5c1c057f')
  }
  stages {
      stage("Build") {
          steps {
              container('pmss') {
                  sh '''
                      cd $SERVICE_NAME
                      docker build --tag $DOCKER_NAMESPACE/$SERVICE_NAME .
                  '''
              }
          }
      }
      stage("Release") {
          steps {
              container('pmss') {
                  sh '''
                      docker login -p $CREDS_PSW -u $CREDS_USR
                      docker push $DOCKER_NAMESPACE/$SERVICE_NAME
                  '''
              }
          }
      }
      stage("Deploy") {
          steps {
              container('kubectl') {
                  sh '''
                      cd $SERVICE_NAME
                      kubectl --token=$TOKEN -n prod apply -f deploy.yaml -f service.yaml
                  '''
              }
          }
      }
  }
}
